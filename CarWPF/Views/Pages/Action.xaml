<Page x:Class="CarWPF.Views.Pages.Action"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:CarWPF.Views.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Action">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Stamp"/>
            <TextBox Width="250" Text="{Binding Car.Stamp}"/>
            <TextBlock Text="Model"/>
            <TextBox Text="{Binding Car.Model}"/>
            <TextBlock Text="Type"/>
            <TextBox Text="{Binding Car.Type}"/>
            <TextBlock Text="Horsepower"/>
            <TextBox Text="{Binding Car.HorsePower}"/>
            <Button Content="Сохранить" Name="Savebtn" Click="Savebtn_Click" Margin="0,10"/>
        </StackPanel>
        <Button Width="40" Height="17" Content="Назад"  HorizontalAlignment="Right" VerticalAlignment="Top" Name="Exitbtn" Click="Exitbtn_Click"/>
    </Grid>
</Page>
